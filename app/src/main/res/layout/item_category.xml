<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/full_cat_width"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="2dp"
    android:gravity="center_horizontal"
    android:layout_height="@dimen/full_cat_height">

    <ImageView
        android:id="@+id/img_cat"
        android:layout_width="@dimen/cat_size"
        android:layout_height="@dimen/cat_size">
    </ImageView>

    <TextView
        android:id="@+id/txt_cat"
        android:gravity="center"
        android:layout_width="@dimen/cat_txt_width"
        android:maxLines="2"
        android:text="Main Category"
        android:minLines="2"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>