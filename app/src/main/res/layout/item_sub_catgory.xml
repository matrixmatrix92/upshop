<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/full_sub_cat_width"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="@dimen/full_sub_cat_height">

    <ImageView
        android:id="@+id/img_cat"
        android:layout_width="@dimen/cat_size"
        android:layout_height="@dimen/cat_size">
    </ImageView>

    <TextView
        android:id="@+id/txt_cat"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:text="Main Category"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>